# ============================================
# AutoStack - Terraform Variables Example
# Copy to terraform.tfvars and customize
# ============================================

# General
project_name = "autostack"
environment  = "dev"
region       = "us-east-1"
domain_name  = "" # Optional: your-domain.com

# Networking
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# EKS
eks_cluster_version  = "1.28"
use_spot_instances   = true
node_instance_types  = ["t3.medium", "t3a.medium"]
node_desired_size    = 2
node_min_size        = 1
node_max_size        = 4

# Database
use_rds              = false # Set true for RDS PostgreSQL
use_aurora           = false # Set true for Aurora Serverless v2
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20
db_name              = "autostack"
db_username          = "autostack"

# Jenkins
jenkins_on_eks       = false # Set true to run Jenkins on EKS
jenkins_instance_type = "t3.small"

# Add-ons
enable_nginx_ingress = false
enable_external_dns  = false
enable_cert_manager  = false
enable_loki          = false
enable_keda          = true

# Monitoring
alert_email       = "your-email@example.com"
slack_webhook_url = "" # Optional

# Tags
tags = {
  Project     = "AutoStack"
  ManagedBy   = "Terraform"
  Environment = "dev"
  Owner       = "DevOps Team"
}
