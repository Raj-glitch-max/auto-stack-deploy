# AutoStack Backend Environment Variables

# Database
DATABASE_URL=postgresql+asyncpg://autostack:autostack@db:5432/autostack

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# GitHub OAuth (Get from: https://github.com/settings/developers)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:8000/auth/github/callback

# Google OAuth (Get from: https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Deployment Settings
DEPLOY_BASE_PORT=10000
DEPLOY_MAX_PORT=20000
DEPLOY_WORKSPACE=/tmp/autostack-deploys

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Agent API Keys (Generate secure random keys)
AGENT_API_KEY_LENGTH=32
